<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="CustomDark" parent="android:Theme.Holo">
        <item name="icon_add">@drawable/ic_action_new_dark</item>
        <item name="icon_accept">@drawable/ic_action_accept_dark</item>
        <item name="icon_share">@drawable/ic_action_share_dark</item>
    </style>
    
	<style name="CustomLight" parent="android:Theme.Holo.Light">
	    <item name="icon_add">@drawable/ic_action_new_light</item>
	    <item name="icon_accept">@drawable/ic_action_accept_light</item>
	    <item name="icon_share">@drawable/ic_action_share_light</item>
    </style>   

</resources>
